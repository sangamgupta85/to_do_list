<h1>Listing todos</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Done</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @todos.each do |todo| %>
  <tr>
    <td><%= todo.description %></td>
    <td>
	<%if todo.done%>
	<%=render :text => "Yes"%>
	<%else%>
	<%=render :text => "No"%>
	<%end%>
	</td>
    <td><%= link_to 'Show', todo %></td>
    <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
    <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
<br />
<%= link_to "Home", :action => "list"%>